<MiniLayout@MDBoxLayout>
    orientation: 'vertical'
    
    MDGridLayout:
        cols: 6
        spacing: 5
        size_hint_y: 0.7

        MDLabel:
            halign: 'center'
            size_hint_x: 0.25

        MDLabel:
            halign: 'center'
            size_hint_x: 0.2

        MDTextField:
            disabled: True
            on_text_validate:
                next.focus = True
            size_hint_x: 0.05

        MDTextField:
            disabled: True
            id: next
            size_hint_x: 0.05
            on_text_validate:
                self.parent.parent.parent.children[self.parent.parent.parent.children.index(self.parent.parent) - 1].children[1].children[3].focus = True

        MDLabel:
            halign: 'center'
            size_hint_x: 0.2
        
        MDLabel:
            halign: 'center'
            size_hint_x: 0.25
    
    MDLabel:
        halign: 'center'
        font_size: "14dp"
        size_hint_y: 0.3