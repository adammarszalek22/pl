<BetLayout@MDBoxLayout>
    orientation: 'vertical'

    MDBoxLayout:
        id: header
        orientation: 'vertical'
        md_bg_color: 0, 0, 0, 0
        size_hint_y: 0.15
        pos_hint: {"top": 1}
        padding: 5

        MDLabel:
            id: header_label
            text: ''
            halign: 'center'

    MDBoxLayout:
        orientation: 'vertical'
        md_bg_color: 0, 0, 0, 0
        size_hint_y: 0.75
        pos_hint: {"top": 0.85}
        padding: 5

        ScrollView:
            id: the_scroll
            do_scroll_x: False
            do_scroll_y: True
            effect_cls: 'DampedScrollEffect'

            MDBoxLayout:
                id: my_main_layout
                padding: 20
                orientation: 'vertical'
                size_hint_y: None
                adaptive_height: True
        
    MDFloatLayout:
        id: float_layout
        size_hint_y: 0.1
        pos_hint: {"top": 0.1}
        spacing: 40
        padding: 20
        #md_bg_color: (1, 1, 1, 1)

        MDFillRoundFlatButton:
            text: 'Previous'
            pos_hint: {"center_x": 0.15, "center_y": 0.5}
            size_hint_x: 0.2
            on_press:
                root.previous_gameweek()

        MDFillRoundFlatButton:
            text: 'SUBMIT'
            pos_hint: {"center_x": 0.5, "center_y": 0.5}
            size_hint_x: None
            width: root.width * 0.35
            on_press:
                root.do_bets()

        MDFillRoundFlatButton:
            text: 'Next'
            pos_hint: {"center_x": 0.85, "center_y": 0.5}
            size_hint_x: 0.2
            on_press:
                root.next_gameweek()