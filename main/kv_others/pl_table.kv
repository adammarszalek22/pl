<PL_LAYOUT@MDBoxLayout>
    orientation: 'horizontal'

    MDBoxLayout:
        orientation: 'vertical'
        spacing: root.spacing
        size_hint_y: 1

        MDGridLayout:
            id: gridlayout
            cols: 2

    
    ScrollView:
        do_scroll_y: False
        do_scroll_x: True
        bar_color: 1, 1, 1, 1
        bar_inactive_color: 0.8, 0.8, 0.8, 1
        bar_color: 0.8, 0.8, 0.8, 1

        MDBoxLayout:
            orientation: 'vertical'
            spacing: root.spacing
            size_hint_x: 1.5

            MDGridLayout:
                id: gridlayout2
                cols: 8