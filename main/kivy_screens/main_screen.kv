<MainWindow>
    name: 'MainWindow' 
    on_enter:
        root.table()
        root.bets()
        root.scores()

    MDBottomNavigation:
        id: bottom_nav

        MDBottomNavigationItem:
            name: 'League Table'
            text: 'Table'
            icon: 'view-list'
            #on_enter: root.table()

            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: 0, 0, 0, 0
                padding: root.padding

                MDBoxLayout:
                    id: main_box
                    orientation: 'horizontal'
                    adaptive_height: True
                    size_hint_y: None

                    MDBoxLayout:
                        id: boxlayout

                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 2

                        md_bg_color: 1, 1, 1, 1
                    
                    ScrollView:
                        do_scroll_y: False
                        do_scroll_x: True

                        bar_color: 1, 1, 1, 1
                        bar_inactive_color: 1, 1, 1, 1

                        MDBoxLayout:
                            id: boxlayout2

                            orientation: 'vertical'
                            spacing: 2
                            
                            size_hint_x: 1.5

        MDBottomNavigationItem:
            name: 'Post Bet'
            text: 'Your predictions'
            icon: 'notebook-edit'
            #on_enter: root.bets()

            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: 0, 0, 0, 0
                size_hint_y: 1
                pos_hint: {"top": 1}
                padding: 5

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    MDBoxLayout:
                        id: mylayout
                        padding: 20
                        orientation: 'vertical'
                        size_hint_y: None
                        adaptive_height: True
                
                MDGridLayout:
                    cols: 3
                    size_hint_y: 0.1
                    spacing: 40

                    MDFloatingActionButton:
                        icon: 'arrow-left-bold-outline'

                        type: "small"
                        icon_color: app.theme_cls.primary_color
                        md_bg_color: (1, 1, 1, 1)
                        elevation: 0

                        pos_hint: {"center_x": 0.15}
                        size_hint_x: 0.1
                        size_hint_y: 1
                        
                        on_press:
                            root.previous_gameweek()
            
                    MDFillRoundFlatButton:
                        text: 'BET'

                        pos_hint: {"center_x": 0.5}
                        size_hint_x: 0.5
                        size_hint_y: 1

                        on_press:
                            root.do_bets()

                    MDFloatingActionButton:
                        icon: 'arrow-right-bold-outline'

                        type: "small"
                        icon_color: app.theme_cls.primary_color
                        md_bg_color: (1, 1, 1, 1)
                        elevation: 0

                        pos_hint: {"center_x": 0.85}
                        size_hint_x: 0.1
                        size_hint_y: 1

                        on_press:
                            root.next_gameweek()
        
        MDBottomNavigationItem:
            name: 'View Your Scores'
            text: 'Your scores'
            icon: 'view-split-vertical'

            MDGridLayout:
                cols: 2

                ScoresLabel:
                    text: 'Username'

                ScoresLabel:
                    id: username

                ScoresLabel:
                    text: 'League position'
                
                ScoresLabel:
                    id: position

                ScoresLabel:
                    text: 'Points'
                
                ScoresLabel:
                    id: points2

                ScoresLabel:
                    text: 'Three-pointers'

                ScoresLabel:
                    id: three_pointers

                ScoresLabel:
                    text: 'One-pointers'

                ScoresLabel:
                    id: one_pointers

        MDBottomNavigationItem:
            name: 'Settings'
            text: 'Settings'
            icon: 'account-settings'

            MDBoxLayout:
                orientation: 'vertical'

                MDRoundFlatButton:
                    text: 'Log out'
                    pos_hint: {"center_x": 0.5, "top": 0.9}
                    on_release:
                        root.logout()
                
                MDRoundFlatButton:
                    text: 'Delete account'
                    pos_hint: {"center_x": 0.5, "top": 0.8}
                    on_release:
                        root.delete_account()
