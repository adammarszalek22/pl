<MoreButton@MDRectangleFlatIconButton>
    theme_text_color: 'Custom'
    text_color: 'black'
    line_color: 'white'
    theme_icon_color: 'Custom'
    icon_color: 'blue'


<MainWindow>
    name: 'MainWindow' 
    on_enter:
        root.table()
        root.bets()

    MDBottomNavigation:
        id: bottom_nav

        MDBottomNavigationItem:
            name: 'League Table'
            text: 'Table'
            icon: 'view-list'
            #on_enter: root.table()

            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: 0, 0, 0, 0
                padding: root.padding

                MDBoxLayout:
                    id: main_box
                    orientation: 'horizontal'
                    adaptive_height: True
                    size_hint_y: None

                    MDBoxLayout:
                        id: boxlayout

                        orientation: 'vertical'
                        adaptive_height: True
                        spacing: 2

                        md_bg_color: 1, 1, 1, 1
                    
                    ScrollView:
                        do_scroll_y: False
                        do_scroll_x: True

                        bar_color: 1, 1, 1, 1
                        bar_inactive_color: 1, 1, 1, 1

                        MDBoxLayout:
                            id: boxlayout2

                            orientation: 'vertical'
                            spacing: 2
                            
                            size_hint_x: 1.5

        MDBottomNavigationItem:
            name: 'Post Bet'
            text: 'Your predictions'
            icon: 'notebook-edit'
            #on_enter: root.bets()

            MDBoxLayout:
                orientation: 'vertical'
                md_bg_color: 0, 0, 0, 0
                size_hint_y: 1
                pos_hint: {"top": 1}
                padding: 5

                ScrollView:
                    do_scroll_x: False
                    do_scroll_y: True

                    MDBoxLayout:
                        id: mylayout
                        padding: 20
                        orientation: 'vertical'
                        size_hint_y: None
                        adaptive_height: True
                
                MDGridLayout:
                    cols: 3
                    size_hint_y: 0.1
                    spacing: 40

                    MDFloatingActionButton:
                        icon: 'arrow-left-bold-outline'

                        type: "small"
                        icon_color: app.theme_cls.primary_color
                        md_bg_color: (1, 1, 1, 1)
                        elevation: 0

                        pos_hint: {"center_x": 0.15}
                        size_hint_x: 0.1
                        size_hint_y: 1
                        
                        on_press:
                            root.previous_gameweek()
            
                    MDFillRoundFlatButton:
                        text: 'BET'

                        pos_hint: {"center_x": 0.5}
                        size_hint_x: 0.5
                        size_hint_y: 1

                        on_press:
                            root.do_bets()

                    MDFloatingActionButton:
                        icon: 'arrow-right-bold-outline'

                        type: "small"
                        icon_color: app.theme_cls.primary_color
                        md_bg_color: (1, 1, 1, 1)
                        elevation: 0

                        pos_hint: {"center_x": 0.85}
                        size_hint_x: 0.1
                        size_hint_y: 1

                        on_press:
                            root.next_gameweek()

        MDBottomNavigationItem:
            name: 'More'
            text: 'More'
            icon: 'more'

            MDBoxLayout:
                orientation: 'vertical'
                padding: 20
                spacing: 5

                MoreButton:
                    text: 'Groups'
                    icon: 'account-group'
                    on_release:
                        app.root.current = 'GroupsWindow'

                MoreButton:
                    text: 'View your score'
                    icon: 'account'
                    on_release:
                        app.root.current = 'ViewScoreWindow'
                
                MoreButton:
                    text: 'View other users\' scores'
                    icon: 'account-multiple-outline'
                
                MoreButton:
                    text: 'Settings'
                    icon: 'account-settings'

                MoreButton:
                    text: 'Log out'
                    icon: 'logout'
                    on_release:
                        root.logout()
                
                MoreButton:
                    text: 'Help'
                    icon: 'help'
                
                MDLabel:

                MDLabel:

                MDLabel:

                MDLabel:

                MDLabel:
                
                



