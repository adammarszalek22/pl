<GroupLayout@MDBoxLayout>
    orientation: 'vertical'
    padding: 30
    spacing: 5

    MDLabel:
        id: heading_label
        halign: 'center'
        size_hint_y: None
        height: root.height * 0.1
    
    MDGridLayout:
        id: grid_layout
        cols: 5
        size_hint_y: None
        height: root.height * 0.8

        MDLabel:
            text: 'Pos'

        MDLabel:
            text: 'Username'

        MDLabel:
            text: 'Pts'

        MDLabel:
            text: '3-pts'

        MDLabel:
            text: '1-pts'
    

