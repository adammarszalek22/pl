<GroupLayout@MDBoxLayout>
    orientation: 'vertical'
    padding: 30
    spacing: 5

    MDLabel:
        id: heading_label
        halign: 'center'
        size_hint_y: None
        height: root.height * 0.1
    
    MDGridLayout:
        id: grid_layout
        cols: 5
        size_hint_y: None
        height: root.height * 0.8

        MDLabel:
            text: 'Position'
            font_size: '12dp'

        MDLabel:
            text: 'Username'
            font_size: '12dp'

        MDLabel:
            text: 'Points'
            font_size: '12dp'

        MDLabel:
            text: 'Three pointers'
            font_size: '12dp'

        MDLabel:
            text: 'One pointers'
            font_size: '12dp'
    

